include C:\Masha\frontend\booking-system\src\form-elements\__like-button\like-button.pug

mixin new_comment(img_src, img_classes, comment_author, comment_author_classes, comment_date, comment_date_classes, comment_text, comment_text_classes, like_quantity)
    div.wrapper_row
        div.wrapper_column
            img(src=img_src class=img_classes)
            div.content_align_center
                +new-like-button("like-button like-button__default-theme like-button__default-theme-text ", "like", like_quantity)
        div.wrapper_column
            h3(class=comment_author_classes)=comment_author
            p(class=comment_date_classes)=comment_date
            p(class=comment_text_classes)=comment_text

link(rel="stylesheet", href="card-for-comment.css")
