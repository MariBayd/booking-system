include ../form-elements/__like-button/like-button.pug

link(rel="stylesheet", href="../src/card-for-comment/card-for-comment.css")

mixin new_comment(img_src, img_classes, comment_author, comment_author_classes, comment_date, comment_date_classes, comment_text, comment_text_classes, like_quantity)
    div.wrapper_row
        div.wrapper_column
            img(src=img_src class=img_classes)
            +new-like-button("like-button like-button__checked-theme like-button__checked-theme-text ", "like", like_quantity)
        div.wrapper_column
            h3(class=comment_author_classes)=comment_author
            p(class=comment_date_classes)=comment_date
            p(class=comment_text_classes)=comment_text



+new_comment("../src/imgs/image.png", "avatar", "Мурад Сарафанов", "title", "5 дней назад", "text", "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.", "text", "8" )
